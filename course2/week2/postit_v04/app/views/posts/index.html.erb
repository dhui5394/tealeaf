<%= render 'shared/content_title', title: "All Existing Posts" %>


<% @posts.each do |p| %>
  <div class="row">
    <div class="span6 well">
      <%= render p.categories %> 
      <h4><%= link_to p.title, fix_url(p.url) %></h4>
      <p><%= p.description %></p>
      <p>
        <span class="quiet">Post developed by [user name] at <%= display_datetime(p.created_at) %></span>
      </p>
      <p>
        (<%= link_to 'edit', edit_post_path(p) %>)
      </p>
      <p>
        <span class="quiet"><%= link_to("#{p.comments.size} comments on this post", post_path(p)) %></span>
      </p>
    </div>
  </div>
<% end %>