<% all_posts = link_to('All Posts', posts_path) %>

<%= render 'shared/content_title', title: "#{all_posts} &raquo; #{@category.name}".html_safe %>

<% @category.posts.each do |p| %>
  <div class="row">
    <div class="span6 well">
      <%= render p.categories %> 
      <h4><%= link_to p.title, p.url %></h4>
      <p><%= p.description %></p>
      <p>
        <span class="quiet">Post developed by NEED INSERT NAME at <%= p.created_at %></span>
      </p>
      <p>
        (<%= link_to 'edit', edit_post_path(p) %>)
      </p>
      <p>
        <span class="quiet"><%= link_to("#{p.comments.size} comments on this post", post_path(p)) %></span>
      </p>
    </div>
  </div>
<% end %>