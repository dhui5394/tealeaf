<%= render 'shared/content_title', title: "All Existing Posts" %>


<% @posts.each do |p| %>
  <div class="row">
    <div class="span6 well">
      <%= render p.categories %> 
      <h4><%= link_to p.title, p.url%></h4>
      <p><%= p.description%></p>
      <p>
        <span class="quiet">Post developed by <%= p.user.username %> at <%= p.created_at %></span>
      </p>
      <p>
        <span class="quiet"><%= link_to("#{p.comments.size} comments on this post", post_path(p)) %></span>
      </p>
    </div>
  </div>
<% end %>